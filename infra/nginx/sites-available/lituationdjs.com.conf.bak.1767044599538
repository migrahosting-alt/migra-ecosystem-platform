# lituationdjs.com - WordPress Site (nginx) - HTTP only for certbot
server {
    server_name lituationdjs.com www.lituationdjs.com;

    root /var/www/lituationdjs.com;
    index index.php index.html index.htm;

    # Logging
    access_log /var/log/nginx/lituationdjs.com.access.log;
    error_log /var/log/nginx/lituationdjs.com.error.log;

    # Allow certbot challenge
    location /.well-known/acme-challenge/ {
        root /var/www/lituationdjs.com;
    }

    # WordPress permalinks
    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    # PHP processing
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Security
    location ~ /\.ht {
        deny all;
    }

    location = /wp-config.php {
        deny all;
    }

    location ~ /\. {
        deny all;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/lituationdjs.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lituationdjs.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot




}

server {
    if ($host = www.lituationdjs.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = lituationdjs.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;
    server_name lituationdjs.com www.lituationdjs.com;
    return 404; # managed by Certbot




}