server {
    server_name lituationdjs.com www.lituationdjs.com;

    root /srv/web/clients/mh03587fa2d1/public;
    index index.php index.html;

    access_log /var/log/nginx/lituationdjs.com.access.log;
    error_log  /var/log/nginx/lituationdjs.com.error.log warn;

    include snippets/security-headers.conf;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    include snippets/php-fpm.conf;

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/lituationdjs.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lituationdjs.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.lituationdjs.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = lituationdjs.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;
    server_name lituationdjs.com www.lituationdjs.com;
    return 404; # managed by Certbot




}